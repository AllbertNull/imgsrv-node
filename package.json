{
  "name": "image-server-avif-ts",
  "version": "2.0.0",
  "description": "Servidor de transformación de imágenes a AVIF con TypeScript y seguridad mejorada",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "mapping:add": "ts-node src/scripts/manageMappings.ts add",
    "mapping:list": "ts-node src/scripts/manageMappings.ts list"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sharp": "^0.32.4",
    "mime-types": "^2.1.35",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/helmet": "^4.0.0",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.4.2",
    "@types/sharp": "^0.31.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/cors": "^2.8.13",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}